include ../../../views/helpers/mixins

mixin menu(title, url)
  li
    a.header__link.link-hover(href=url)= title

header.header
  +logo.header__logo
  nav.header__nav
    ul.header__menu
      +menu('О нас', '#about')
      +menu('Проекты', '#projects')
      +menu('Материалы', '#')
      +menu('Отзывы', '#reviews')
    a.header__link(href='tel:79999999999') +7 999 999 99 99
  button.btn.btn_menu.header__burger(type='button' aria-label='Открыть меню' aria-expanded='false')
